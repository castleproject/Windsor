<configuration>

  <facilities>
    <facility id="typedfactory">
      <factories>
        <factory id="compFactory1"
                 interface="IComponentFactory1"
                 creation="Construct" destruction="" />

        <factory id="compFactory2"
                 interface="IComponentFactory2"
                 creation="Construct" destruction="" />

        <factory id="protocolFac1"
                 interface="IProtocolHandlerFactory1"
                 creation="Create" destruction="Release" />

        <factory id="protocolFac2"
                 interface="IProtocolHandlerFactory2"
                 creation="Create" destruction="Release" />

        <factory id="NoCreationOrDestructionDefined"
                 interface="IComponentFactory1" />

        <factory id="HasOneSelector"
                 interface="IComponentFactory1"
                 selector="${oneSelector}" />
      </factories>
    </facility>
  </facilities>

  <components>
    <component id="oneSelector" 
               type="Component1Selector" />
  </components>

</configuration>