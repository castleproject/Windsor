<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <facilities>

    <facility type="Castle.Facilities.EventWiring.EventWiringFacility, Castle.Facilities.EventWiring" />

  </facilities>

  <components>
    <component
      id="SimpleListener"
      type="SimpleListener" />

    <component
      id="SimpleListener2"
      type="SimpleListener" />

    <component
      id="MultiListener"
      type="MultiListener" />

    <component
      id="PublisherListener"
      type="PublisherListener">

      <subscribers>
        <subscriber id="MultiListener" handler="OnPublish" event="Event1" />
      </subscribers>
    </component>

    <component
      id="SimplePublisher"
      type="SimplePublisher" >
      <subscribers>
        <subscriber id="SimpleListener" event="Event" handler="OnPublish"/>
        <subscriber id="SimpleListener2" event="StaticEvent" handler="OnPublish"/>
        <subscriber id="PublisherListener" handler="OnPublish"  event="Event" />
      </subscribers>
    </component>

    <component
      id="MultiPublisher"
      type="MultiPublisher" >
      <subscribers>
        <subscriber id="MultiListener" handler="OnPublish" event="Event1"  />
        <subscriber id="MultiListener" handler="OnPublish2" event="Event2"  />
      </subscribers>
    </component>
  </components>

</configuration>